                    Function("Close"): If((
                        if: Eq(Variant(), "Open"),
                        then: EntityAction(PopVariant),
                    )),
                },

                variants: {
                    "Open": (
                        components: [
                            Animation([
                                (0, 1000),
                            ]),
                        ],
                        collision_tag: (
                            labels: [],
                            collides_with: [],
                        ),
                    ),
                },

                collision_tag: (
                    labels: ["Solid"],
                    collides_with: [],
                ),
            ),
        ),
    }
)
