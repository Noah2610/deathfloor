#![enable(implicit_some)]
(
    types: {
        "Door0": (
            spritesheet_filename: "environment_vent_grey_closed.png",

            entity: (
                components: [
                    Hitbox(Size),
                    Animation([
                        (0, 200),
                        (1, 200),
                        (2, 200),
                    ]),
                ],

                events: {
                    Function("Open"): If((
                        if: Not(Eq(Variant(), "Open")),
                        then: EntityAction(PushVariant("Open")),
