#![enable(implicit_some)]
(
    types: {
        "NormalRight": (
            spritesheet_filename: "enemy_yellow_flying1.png",

            entity: (
                components: (
                    size: (
                        w: 16.0,
                        h: 24.0,
                    ),
                    gravity: (
                        x: None,
                        y: -400.0,
                    ),
                    max_movement_velocity: (
                        x: 100.0,
                        y: 200.0,
                    ),
                    base_friction: (
                        friction_x: 1000.0,
                        friction_y: None,
                    ),
                    animations: {
                        Idle: Cycle([
                            (0, 100),
                            (1, 150),
                        ]),
                        Walk: Cycle([
                            (0, 150),
                            (1, 100),


                        ]),
                    },
                    hitbox: Size,
                    walker: (
                        x: 250.0,
                        y: None,
                    ),
                    health: (
                        health: 4,
                        max_health: 4,
                    ),
                    health_display: (
                        position: Top,
                        size: (32.0, 2.0),
                        padding: 4.0,
                        border_padding: 0.5,
                    ),
                    deals_damage: (
                        damage: 4,
                    ),
                ),

                events: {
                    OnCollision(
                        And([
                            IsSide(Left),
                            IsTag("Player"),
                        ]),
                    ): MoveAction(AddVelocity(
                        x: 200.0,
                    )),

                    OnCollision(
                        And([
                            IsSide(Right),
                            IsTag("Player"),
                        ]),
                    ): MoveAction(AddVelocity(
                        x: -200.0,
                    )),

                     OnCollision(
                        And([
                            IsTag("Bullet"),
                            IsState(Enter),
                        ]),
                    ): Group([
                        SoundAction(PlayWithVolume(Jump, 0.3)),
                        MoveAction(AddVelocity(
                            y: 100.0,
                            x: 400.0,
                        )),
                        HealthAction(Lose(2)),
                    ]),

                    // PIVOT

                    OnCollision(And([
                        Or([IsSide(Right), IsSide(InnerSide( x: Right ))]),
                        IsState(Enter),
                    ])): Group([
                        InsertComponents((
                            walker: (
                                x: -250.0,
                            ),
                        )),
                    ]),

                    OnCollision(And([
                        Or([IsSide(Left), IsSide(InnerSide( x: Left ))]),
                        IsState(Enter),
                    ])): Group([
                        InsertComponents((
                            walker: (
                                x: 250.0,
                            ),
                        )),
                    ]),
                },

                collision_tag: (
                    labels: ["Enemy", "Solid"],
                    collides_with: ["Player", "Solid", "Jumppad", "Bullet"],
                ),

                solid_tag: (
                    labels: ["Enemy", "Solid"],
                    collides_with: ["Solid"],
                ),
            ),
        ),
    }
)
