#![enable(implicit_some)]
(
    types: {
        "MiniBlue": (
            spritesheet_filename: "enemy_mini_blue.png",

            entity: (
                components: (
                    size: (
                        w: 16.0,
                        h: 24.0,
                    ),
                    gravity: (
                        x: None,
                        y: -400.0,
                    ),
                    max_movement_velocity: (
                        x: 500.0,
                        y: 250.0,
                    ),
                    base_friction: (
                        friction_x: 600.0,
                        friction_y: None,
                    ),
                    animations: {
                        Idle: Cycle([
                            (1, 150),
                        ]),
                        Walk: Cycle([
                            (0, 90),
                            (1, 90),
                            (2, 90),
                            (3, 90),
                            (4, 90),
                            (3, 90),
                            (2, 90),
                            (1, 90),

                        ]),
                        Death: Once([
                            (1, 40),
                            (4, 40),
                            (1, 40),
                        ]),
                    },
                    hitbox: Custom([
                        (
                            top:    6.0,
                            bottom: -12.0,
                            left:   -6.0,
                            right:  6.0,
                        )
                    ]),
                    walker: (
                        x: -700.0,
                        y: None,
                    ),
                    health: (
                        health: 1,
                        max_health: 1,
                    ),
                    health_display: (
                        position: Top,
                        size: (32.0, 2.0),
                        padding: 4.0,
                        border_padding: 0.5,
                    ),
                    deals_damage: (
                        damage: 4,
                    ),
                ),

                events: {
                    OnCollision(
                        And([
                            Or([IsSide(Left), IsSide(InnerSide( x: Left ))]),
                            IsTag("Player"),
                        ]),
                    ): MoveAction(AddVelocity(
                        x: 500.0,
                        y: 0,
                    )),

                    OnCollision(
                        And([
                            Or([IsSide(Right), IsSide(InnerSide( x: Right ))]),
                            IsTag("Player"),
                        ]),
                    ): MoveAction(AddVelocity(
                        x: -500.0,
                        y: 0,
                    )),

                    OnCollision(
                        And([
                            IsTag("Bullet"),
                            IsState(Enter),
                        ]),
                    ): Group([
                        SoundAction(PlayWithVolume(Jump, 0.3)),
                        MoveAction(AddVelocity(
                            y: 150.0,
                        )),
                        HealthAction(Lose(1)),
                    ]),

                    // PIVOT

                    OnCollision(And([
                        Or([IsSide(Right), IsSide(InnerSide( x: Right ))]),
                        IsState(Enter),
                    ])): Group([
                        InsertComponents((
                            walker: (
                                x: -700.0,
                            ),
                        )),
                    ]),

                    OnCollision(And([
                        Or([IsSide(Left), IsSide(InnerSide( x: Left ))]),
                        IsState(Enter),
                    ])): Group([
                        InsertComponents((
                            walker: (
                                x: 700.0,
                            ),
                        )),
                    ]),
                },

                collision_tag: (
                    labels: ["Enemy"],
                    collides_with: ["Player", "Solid", "Jumppad", "Bullet"],
                ),

                solid_tag: (
                    labels: ["Enemy"],
                    collides_with: ["Solid"],
                ),
            ),
        ),
    }
)
