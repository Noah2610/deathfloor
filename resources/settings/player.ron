#![enable(implicit_some)]
/// Player settings.
(
    /// The player's in-game size.
    size: (
        width:  32.0,
        height: 64.0,
    ),

    /// The player's acceleration.
    acceleration:  (5000.0, 2000.0),

    /// The player's physics data; anything involving physics.
    /// NOTE: Max speed is `acceleration / damping`.
    physics: (
        max_velocity:  None,
        damping:       20.0,
        mass:          1.0, // NOTE: Player's mass is ignored when applying force
        has_gravity:   true,
        body_status:   Dynamic,
        shape:         Cuboid(
            half_width:  16.0,
            half_height: 32.0,
        ),
        friction:      0.0,
        restitution:   0.0,
    ),
)
